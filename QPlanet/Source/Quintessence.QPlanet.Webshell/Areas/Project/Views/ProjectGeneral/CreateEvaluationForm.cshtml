@model Quintessence.QPlanet.Webshell.Areas.Project.Models.ProjectGeneral.CreateEvaluationFormActionModel
@using (Html.BeginForm("CreateEvaluationForm", "ProjectGeneral", FormMethod.Post, new { id = "CreateEvaluationFormForm" }))
{
    @Html.HiddenFor(m => m.CrmProjectId)
    <div class="row">
        <div>@Html.DisplayNameFor(m => m.FirstName)</div>
        <div>@Html.EditorFor(m => m.FirstName)</div>
    </div>
    @Html.ValidationMessageFor(m => m.FirstName)
    <div class="row">
        <div>@Html.DisplayNameFor(m => m.LastName)</div>
        <div>@Html.EditorFor(m => m.LastName)</div>
    </div>
    @Html.ValidationMessageFor(m => m.LastName)    
    <div class="row">
        <div>@Html.DisplayNameFor(m => m.Gender)</div>
        <div>@Html.DropDownListFor(m => m.Gender, Model.CreateGenderSelectListItems())</div>
    </div>
    <div class="row">
        <div>@Html.DisplayNameFor(m => m.Email)</div>
        <div>@Html.EditorFor(m => m.Email)</div>
    </div>
    <div class="row">
        <div>@Html.DisplayNameFor(m => m.LanguageId)</div>
        <div>@Html.DropDownListFor(m => m.LanguageId, Model.CreateLanguageSelectListItems(Model.LanguageId))</div>
    </div>
    <div class="row">
        <div>@Html.DisplayNameFor(m => m.EvaluationFormTypeId)</div>
        <div>@Html.DropDownListFor(m => m.EvaluationFormTypeId, Model.CreateEvaluationFormSelectListItems(Model.EvaluationFormTypeId))</div>
    </div>
    <br />
    <br />
    <div class="right-text">
        <a href="javascript:void(0);" class="button" id="AddEvaluationFormSubmitButton">Add</a>
    </div>
}
