@model IList<Quintessence.QPlanet.ViewModel.Prm.CrmProjectLinkModel>
<table class="list" style="width: 100%">
    <thead>
        <tr>
            <th style="width: 80%;">Project</th>
            <th style="width: 20%;">Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            if (i % 2 == 0)
            {
            <tr class="even">
                @Html.DisplayFor(m => m[i])
            </tr>
            }
            else
            {
            <tr class="odd">
                @Html.DisplayFor(m => m[i])
            </tr>
            }
        }
    </tbody>
</table>

