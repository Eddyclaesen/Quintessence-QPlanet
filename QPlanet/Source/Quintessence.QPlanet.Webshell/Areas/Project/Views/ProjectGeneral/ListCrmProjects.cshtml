@model Quintessence.QPlanet.Webshell.Areas.Project.Models.ProjectGeneral.ListCrmProjectsActionModel
@using (Html.BeginForm("ListCrmProjects", "ProjectGeneral", FormMethod.Post, new {id = "ListCrmProjectsForm"}))
{
    <table id="CrmProjectTable">
        <thead>
            <tr>
                <th style="width: 50%;">Project</th>
                <th style="width: 20%;">Status</th>
                <th style="width: 30%;">Revenue</th>
                <th style="width: 100px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.CrmProjectRevenueDistributions.Count; i++)
            {
                var project = Model.CrmProjectRevenueDistributions[i];
                <tr>
                    <td>@project.CrmProjectName</td>
                    <td>@project.CrmProjectStatusName</td>
                    <td>
                        @Html.EditorFor(m => m.CrmProjectRevenueDistributions[i], "BaseEntityViewTemplate")
                        @Html.EditorFor(m => m.CrmProjectRevenueDistributions[i].Revenue)
                    </td>
                    <td>
                        <a href="javascript:void(0);" data-function="RemoveCrmProject" data-icon="delete" data-id="@project.CrmProjectId">
                            Detach</a>
                        <a href="@Url.Action("ProjectDna", "ProjectGeneral")/@project.CrmProjectId" target="@string.Format("CrmProject{0}", project.CrmProjectId)">
                            DNA</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<br />
<br />
<div style="text-align: right">
    <a href="javascript:void(0);" class="button" data-function="SaveCrmProjectButton">Save</a>
    <a href="javascript:void(0);" class="button" data-function="LinkCrmProjectButton">Add</a>
</div>
