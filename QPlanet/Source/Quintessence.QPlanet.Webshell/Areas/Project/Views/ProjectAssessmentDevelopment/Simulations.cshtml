@model List<Quintessence.QPlanet.ViewModel.Sim.SimulationMatrixEntryModel>

<table id="SelectNewSimulationTable">
    <thead>
        <tr>
            <th />
            <th style="width: 15%">Set</th>
            <th style="width: 25%">Department</th>
            <th style="width: 15%">Level</th>
            <th style="width: 20%">Simulation</th>
            <th style="width: 20%">Languages</th>
            <th style="width: 5%">Layout</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>
                    @Html.HiddenFor(m => m[i].Id, new{data_hidden_type="HiddenId"})
                    @Html.CheckBoxFor(m => m[i].IsChecked, new { data_function = "AddSimulationCombinationId", data_id = Model[i].Id })
                </td>
                <td>@Html.LabelFor(m => m[i].IsChecked, Model[i].SimulationSetName)</td>
                <td>@Model[i].SimulationDepartmentName</td>
                <td>@Model[i].SimulationLevelName</td>
                <td>@Model[i].SimulationName</td>
                <td>@Model[i].LanguageNames</td>
                <td>@(Model[i].QCandidateLayoutId == 0 ? "none" : Model[i].QCandidateLayoutId == 1 ? "pdf" : Model[i].QCandidateLayoutId == 2 ? "memo" : "")</td>
            </tr>
        }
    </tbody>
</table>
