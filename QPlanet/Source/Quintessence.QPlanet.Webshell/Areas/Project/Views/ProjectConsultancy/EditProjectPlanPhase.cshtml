@using Quintessence.QPlanet.Infrastructure.Nullable
@model Quintessence.QPlanet.ViewModel.Prm.EditProjectPlanPhaseModel
<p>
    Detail of the project plan phase.<br />
    Change the timeframe of the project plan phase.
</p>
@using (Html.BeginForm("EditProjectPlanPhase", "ProjectConsultancy", FormMethod.Post, new { id = "EditProjectPlanPhaseForm" }))
{
    @Html.EditorFor(m => m, "BaseEntityViewTemplate")
    <div class="row">
        <div>@Html.LabelFor(m => m.Name)</div>
        <div>
            @Html.EditorFor(m => m.Name)
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>
    <div class="row">
        <div>@Html.LabelFor(m => m.StartDate)</div>
        <div>
            @Html.TextBox(Html.IdFor(m => m.StartDate).ToString(), Model.StartDate.ToString("dd/MM/yyyy"))
            @Html.ValidationMessageFor(m => m.StartDate)
        </div>
    </div>
    <div class="row">
        <div>@Html.LabelFor(m => m.EndDate)</div>
        <div>
            @Html.TextBox(Html.IdFor(m => m.EndDate).ToString(), Model.EndDate.ToString("dd/MM/yyyy"))
            @Html.ValidationMessageFor(m => m.EndDate)
        </div>
    </div>
}

<script>
    $(function () {
        $('#@Html.IdFor(m => m.StartDate)').datetimepicker({ dateFormat: "dd/mm/yy", showTimepicker: false });
        $('#@Html.IdFor(m => m.EndDate)').datetimepicker({ dateFormat: "dd/mm/yy", showTimepicker: false });
    })
</script>
