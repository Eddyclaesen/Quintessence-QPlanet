@model System.Collections.Generic.List<Quintessence.QService.QueryModel.Cam.CandidateView>

<table id="CandidatesTable">
    <thead>
        <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Email</th>
            <th>Gender</th>
            <th>Language</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var candidate in Model)
        {
            <tr>
                <td>@candidate.FirstName</td>
                <td>@candidate.LastName</td>
                <td>@candidate.Email</td>
                <td>@candidate.Gender</td>
                <td>@candidate.LanguageName</td>
                <td>@Html.ActionLink("Edit", "Edit", new { id = candidate.Id }, new{target = candidate.Id, @class = "edit-link"})
                    @Html.ActionLink("Neo", "Neo", new { id = candidate.Id }, new { target = candidate.Id, @class = "neo-link", onclick = "return confirm('Are you sure you want to create a standalone Neo-P-Ir?')" })
                </td>
            </tr>
        }
    </tbody>
</table>
