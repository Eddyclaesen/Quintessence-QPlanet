@model Quintessence.QPlanet.Webshell.Areas.Admin.Models.AdminUser.SynchronizeUsersActionModel

@using (Html.BeginForm("SynchronizeUsers", "AdminUser", FormMethod.Post, new { id = "SynchronizeUsersForm" }))
{
    <table class="dataTable">
        <thead>
            <tr>
                <th style="width: 40%">Name</th>
                <th style="width: 20%">Username</th>
                <th style="width: 40%">Initial<br />
                    password</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.UnsynchronizedEmployees.Count; i++)
            {
                <tr>
                    <td>
                        <label>
                            @Html.CheckBoxFor(m => m.UnsynchronizedEmployees[i].IsChecked)
                            @Model.UnsynchronizedEmployees[i].FullName
                        </label>
                        @Html.HiddenFor(m => m.UnsynchronizedEmployees[i].Id)
                        @Html.HiddenFor(m => m.UnsynchronizedEmployees[i].FirstName)
                        @Html.HiddenFor(m => m.UnsynchronizedEmployees[i].LastName) 
                    </td>
                    <td>@Html.EditorFor(m => m.UnsynchronizedEmployees[i].UserName)</td>
                    <td>@Html.EditorFor(m => m.UnsynchronizedEmployees[i].Password)</td>
                </tr>
            }
        </tbody>
    </table>
    
    <br />
    
    <div class="right-text">
        <a href="javascript:void(0);" data-function="SubmitSynchronizeUsersFormButton" class="button">Sync</a>
    </div>
}