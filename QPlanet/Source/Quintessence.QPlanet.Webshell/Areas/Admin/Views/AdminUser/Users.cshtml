@model Quintessence.QPlanet.Webshell.Areas.Admin.Models.AdminUser.UsersActionModel

<table id="UsersTable">
    <thead>
        <tr>
            <th style="width: 80%;">Name</th>
            <th style="width: 20%;">Username</th>
            <th style="width: 72px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.UserName</td>
                <td>
                    @Html.ActionLink("Details", "UserDetail", new { id = user.Id }, new { target = user.Id.ToString() })
                </td>
            </tr>
        }
    </tbody>
</table>

<br />
<br />
<div class="right-text">
    <a href="javascript:void(0)" data-function="RefreshUsers" class="button">Refresh</a>
    <a href="javascript:void(0)" data-function="SynchronizeUsers" class="button">Sync SO</a>
    <a href="javascript:void(0)" data-function="AddUsers" class="button">Add</a>
</div>
