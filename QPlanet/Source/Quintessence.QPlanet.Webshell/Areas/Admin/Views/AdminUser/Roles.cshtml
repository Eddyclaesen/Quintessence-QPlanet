@model Quintessence.QPlanet.Webshell.Areas.Admin.Models.AdminUser.RolesActionModel

<table id="RolesTable">
    <thead>
        <tr>
            <th style="width: 20%;">Name</th>
            <th style="width: 80%;">Description</th>
            <th style="width: 72px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.Roles)
        {
            <tr>
                <td>@role.Name</td>
                <td>@role.Description</td>
                <td>
                    @Html.ActionLink("Details", "RoleDetail", new { id = role.Id }, new { target = role.Id.ToString() })
                </td>
            </tr>
        }
    </tbody>
</table>