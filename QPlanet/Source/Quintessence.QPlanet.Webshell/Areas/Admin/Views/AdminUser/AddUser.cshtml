@model Quintessence.QPlanet.ViewModel.Sec.AddUserModel

@using (Html.BeginForm("AddUser", "AdminUser", FormMethod.Post, new { id = "AddUserForm" }))
{
    <div class="row">
        <div>@Html.DisplayNameFor(m => m.UserName)</div>
        <div>@Html.TextBoxFor(m => m.UserName)</div>
    </div>
    <div class="row">
        <div>@Html.DisplayNameFor(m => m.Password)</div>
        <div>@Html.TextBoxFor(m => m.Password)</div>
    </div>
    <div class="row">
        <div>@Html.DisplayNameFor(m => m.FirstName)</div>
        <div>@Html.TextBoxFor(m => m.FirstName)</div>
    </div>
    <div class="row">
        <div>@Html.DisplayNameFor(m => m.LastName)</div>
        <div>@Html.TextBoxFor(m => m.LastName)</div>
    </div>
    <div class="row">
        <div>@Html.DisplayNameFor(m => m.LanguageId)</div>
        <div>@Html.DropDownListFor(m => m.LanguageId, Model.CreateLanguageDropdownList())</div>
    </div>
    
    <br />
    <br />
    
    <div class="right-text">
        <a href="javascript:void(0);" data-function="SubmitAddUserFormButton" class="button">Add</a>
    </div>
}