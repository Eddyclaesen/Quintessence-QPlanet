@model Quintessence.QPlanet.ViewModel.Rep.CreateNewReportParameterModel
<p>Add a new translation</p>

@using (Html.BeginForm("AddTranslation", "AdminHome", FormMethod.Post, new { id = "AddTranslationForm" }))
{
    <div style="overflow: auto; max-height: 450px; min-height: 450px;">
        <div class="row">
            <div>@Html.DisplayNameFor(m => m.Code)</div>
            <div>@Html.EditorFor(m => m.Code)</div>
        </div>
        <div class="row">
            <div>@Html.DisplayNameFor(m => m.Description)</div>
            <div>@Html.EditorFor(m => m.Description)</div>
        </div>
        <div class="row">
            <div>@Html.DisplayNameFor(m => m.DefaultText)</div>
            <div>@Html.TextAreaFor(m => m.DefaultText)</div>
        </div>

        @for (var i = 0; i < Model.Values.Count; i++)
        {
            <div class="row">
                <div>@Model.Values[i].LanguageName
                    @Html.HiddenFor(m => m.Values[i].LanguageId)
                </div>
                <div>@Html.TextAreaFor(m => m.Values[i].Text)</div>
            </div>
        }
    </div>
    <br />
}

<div class="right-text">
    <a href="javascript:void(0);" data-function="AddTranslationSubmitButton" class="button">
        Save</a>
</div>
