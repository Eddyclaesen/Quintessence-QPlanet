@model List<Quintessence.QService.QueryModel.Sim.SimulationContextView>
<table id="SimulationContextTable">
    <thead>
        <tr>
            <th>Name</th>
            <th style="width: 72px">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var context in Model)
        {
            <tr>
                <td>@context.Name</td>
                <td>
                    @Html.ActionLink("Edit", "EditSimulationContext", new { id = context.Id }, new { target = context.Id, @class="edit-link" })
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<br />

<div class="right-text">
    <a href="javascript:void(0);" data-function="AddSimulationContext" class="button">Create</a>
</div>