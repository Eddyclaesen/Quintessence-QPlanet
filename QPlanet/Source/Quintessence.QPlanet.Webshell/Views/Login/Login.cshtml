@model Quintessence.QPlanet.Webshell.Models.Login.Credential
@{
}
@section AdditionalScripts
{
    <script>
        $(function() {
            InitializeButtons();
        });

        function InitializeButtons() {
            $('#SubmitLogin').click(function (event) {
                ShowDetailSaveDialog();
            });
        }
    </script>
}
<div class="prefix_4 grid_8">
    <fieldset>
        <legend>Login</legend>
        <label>Enter your QPlanet credentials</label>
        <br />
        <br />

        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.ReturnUrl)
            <div class="row">
                <div>@Html.LabelFor(m => m.UserName)</div>
                <div>@Html.TextBoxFor(m => m.UserName)</div>
                <div>@Html.ValidationMessageFor(m => m.UserName)</div>
            </div>

            <div class="row">
                <div>@Html.LabelFor(m => m.Password)</div>
                <div>@Html.PasswordFor(m => m.Password)</div>
                <div>@Html.ValidationMessageFor(m => m.Password)</div>
            </div>
            <br />
            <br />
            
            <div class="left-text">
                <input id="SubmitLogin" type="submit" value="Log in" class="button">
            </div>
        }
    </fieldset>
</div>
<div class="clear"></div>
